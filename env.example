# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1
API_PREFIX=/api

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/angola_localization?schema=public"

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache
CACHE_TTL=3600
CACHE_PREFIX=angola_api

# CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Security
BCRYPT_ROUNDS=12
HELMET_CSP_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Swagger
SWAGGER_TITLE="API de Localização de Angola"
SWAGGER_DESCRIPTION="API RESTful para consulta de províncias e municípios de Angola"
SWAGGER_VERSION="1.0.0"
SWAGGER_CONTACT_NAME="Comunidade de Desenvolvedores Angolanos"
SWAGGER_CONTACT_EMAIL="contato@angola-dev.com"
SWAGGER_CONTACT_URL="https://github.com/angola-dev/localization-api"

# Monitoring
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
